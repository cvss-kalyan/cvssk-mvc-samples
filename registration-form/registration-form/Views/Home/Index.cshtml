@model registration_form.Models.Details

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div>
        @using (Html.BeginForm("submitedData", "Home", FormMethod.Post))
        {
            <strong>First Name</strong> @Html.TextBoxFor(x => x.FirstName) <br />
            @Html.ValidationMessageFor(x => x.FirstName) <br />
            <strong>Last Name</strong> @Html.TextBoxFor(x => x.LastName) <br />
            @Html.ValidationMessageFor(x => x.LastName) <br />
            <strong>Email</strong> @Html.TextBoxFor(x => x.Email) <br />
            @Html.ValidationMessageFor(x => x.Email) <br />
            <strong>Age</strong> @Html.TextBoxFor(x => x.Age) <br />
            @Html.ValidationMessageFor(x => x.Age) <br />
            <br />

            <input type="submit" value="Save" />
        }
    </div>
</body>
</html>
